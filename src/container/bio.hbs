{{!--
Це код container файлу для bio сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/bio"
--}}

<div class="p-5">
    <div class="mb-4">
        <h1>{{name}}</h1>
    </div>
    <div>
        (<b>{{birthdate}}</b>, {{birthplace}} - <b>{{deathdate}}</b>, {{deathplace}})
    </div>
    <hr class="my-5" />
    {{!-- <div>
        <p><b>Birth date:</b> {{birthdate}}</p>
    </div>
    <div>
        <p><b>Birth place:</b> {{birthplace}}</p>
    </div>
    <div>
        <p><b>Death date:</b> {{deathdate}}</p>
    </div>
    <div>
        <p><b>Death place:</b> {{deathplace}}</p>
    </div> --}}
    <div>
        <p><b>Nationalitye:</b> {{nationality}}</p>
    </div>
    <div>
        <p><b>Occupation:</b> {{occupation}}</p>
    </div>
    <hr class="my-5" />
    <div>
        <b>Known for:</b>
    </div>
    <ul>
        {{#each known_for}}
        <li>{{this}}</li>
        {{/each}}
    </ul>
    <hr class="my-5" />
    <section>
        {{> title data="Education:" big=true}}
        <div class="row g-4">
            {{#each education}}
            <div class="col-4">
                <div class="card h-100 p-4">
                    <div class="mb-4">
                        <b>Degree: {{degree}}</b>
                    </div>
                    <div>
                        <em>Field: {{field}}</em>
                    </div>
                    <div>
                        <p>Institution: {{institution}}</p>
                    </div>
                    <div>
                        <div>Year: {{year}}</div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </section>
    <hr class="my-5" />
    <section>
        {{> title data="Notable publications:" big=true}}
        <div class="row g-4">
            {{#each notable_publications}}
            <div class="col-4">
                <div class="card h-100 p-4">
                    <div>
                        <b>{{title}}</b>
                    </div>
                    <div>
                        <p>Year: {{year}}</p>
                    </div>
                    <div>
                        <div>Publisher: {{publisher}}</div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </section>
    <hr class="my-5" />
    <section>
        {{> title data="Partners:" big=true}}
        <div class="row g-4">
            {{#each partners}}
            <div class="col-4">
                <div class="card h-100 p-4">
                    <div>
                        <b>{{name}}</b>
                    </div>
                    <div>
                        <em>Relationship: {{relationship}}</em>
                    </div>
                    <div>
                        <div>Years: {{years}}</div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </section>
    <hr class="my-5" />
    <section>
        {{> title data="Awards:" big=true}}
        <div class="row g-4">
            {{#each awards}}
            <div class="col-4">
                <div class="card h-100 p-4">
                    <div>
                        <b>{{title}}</b>
                    </div>
                    <div>
                        <p>Year: {{year}}</p>
                    </div>
                    <div>
                        <p>{{description}}</p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </section>
    <hr class="my-5" />
    {{> title data="Influences:" big=true}}
    <ul>
        {{#each influences}}
        <li>{{this}}</li>
        {{/each}}
    </ul>
    <hr class="my-5" />
    {{> title data="Influenced:" big=true}}
    <ul>
        {{#each influenced}}
        <li>{{this}}</li>
        {{/each}}
    </ul>
    <hr class="my-5" />
    {{> title data="Quotes:" big=true}}

    {{#each quotes}}
    <div class="card my-2 p-2">
        <q>{{this}}</q>
    </div>
    {{/each}}

    <hr class="my-5" />
    <section>
        {{> title data="Major discoveries:" big=true}}
        <div class="row g-4">
            {{#each major_discoveries}}
            <div class="col-6">
                <div class="card h-100 p-4">
                    <div>
                        <b>{{title}}</b>
                    </div>
                    <div>
                        <p>Year: {{year}}</p>
                    </div>
                    <div>
                        <p>{{description}}</p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </section>
    <hr class="my-5" />
    <section>
        {{> title data="Contributions:" big=true}}
        {{#with contributions}}
        <div>
            <em>{{title}}</em>
        </div>
        <div>
            <p>{{description}}</p>
        </div>
        <div>
            <p>Year: {{year}}</p>
        </div>
        <div>
            <p>Field: {{field}}</p>
        </div>
        {{/with}}
    </section>
</div>

