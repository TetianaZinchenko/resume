{{!--
Це код container файлу для educations сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/educations"
--}}

<div>
    {{#with main}}
    <main>
        <section>
            {{> title data="My education" big=true}}
            <ul>
                {{#each educations}}
                <li>{{name}} {{#unless isEnd}} (ще навчаюсь) {{/unless}}</li>
                {{/each}}
            </ul>
        </section>

        <section>
            {{> title data="My certificates" big=false}}
            <ul>
                {{#each certificates}}
                <li>{{name}} ({{id}})</li>
                {{/each}}
            </ul>
        </section>
    </main>
    {{/with}}
</div>

