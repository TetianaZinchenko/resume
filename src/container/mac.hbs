{{!--
Це код container файлу для mac сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/mac"
--}}

<div>

    <div>
        <h1>{{name}}</h1>
    </div>

    <div>
        <p>{{description}}</p>
    </div>

    <div>
        <p><b>Price: </b><span class="badge text-bg-warning">{{price}}</span></p>
    </div>

    <div>
        <p><b>Category: </b>{{category}}</p>
    </div>

    {{> title data="Features:" big=false}}

    {{#with features}}

    <br />
    <hr />
    <br />

    <div>
        <p><b><mark>Processor:</mark></b></p>
    </div>

    {{#with processor}}

    <div>
        <p><b>Brand: </b>{{brand}}</p>
    </div>

    <div>
        <p><b>Model: </b>{{model}}</p>
    </div>

    <div>
        <p><b>Speed: </b>{{speed}}</p>
    </div>

    <div>
        <p><b>Cores: </b><span class="badge text-bg-info">{{cores}}</span></p>
    </div>

    <div>
        <p><b>Cache: </b>{{cache}}</p>
    </div>

    {{/with}}

    <br />
    <hr />
    <br />

    <div>
        <p><b><mark>Memory:</mark></b></p>
    </div>

    {{#with memory}}

    <div>
        <p><b>Type: </b>{{type}}</p>
    </div>

    <div>
        <p><b>Size: </b>{{size}}</p>
    </div>

    <div>
        <p><b>Speed: </b>{{speed}}</p>
    </div>

    {{/with}}

    <br />
    <hr />
    <br />

    <div>
        <p><b><mark>Storage:</mark></b></p>
    </div>

    {{#with storage}}

    <div>
        <p><b>Type: </b>{{type}}</p>
    </div>

    <div>
        <p><b>Size: </b>{{size}}</p>
    </div>

    {{/with}}

    <br />
    <hr />
    <br />

    <div>
        <p><b><mark>Display:</mark></b></p>
    </div>

    {{#with display}}

    <div>
        <p><b>Size: </b>{{size}}</p>
    </div>

    <div>
        <p><b>Resolution: </b>{{resolution}}</p>
    </div>

    <div>
        <p><b>Technology: </b>{{technology}}</p>
    </div>

    <div>
        <p><b>Color space: </b>{{color_space}}</p>
    </div>

    <div>
        <p><b>Brightness: </b>{{brightness}}</p>
    </div>

    <div>
        <p><b>Refresh rate: </b>{{refresh_rate}}</p>
    </div>

    {{/with}}

    <br />
    <hr />
    <br />

    <div>
        <p><b><mark>Graphics:</mark></b></p>
    </div>

    {{#with graphics}}

    <div>
        <p><b>Brand: </b>{{brand}}</p>
    </div>

    <div>
        <p><b>Model: </b>{{model}}</p>
    </div>

    <div>
        <p><b>Memory: </b>{{memory}}</p>
    </div>

    {{/with}}

    <br />
    <hr />
    <br />

    <div>
        <p><b><mark>Ports:</mark></b></p>
    </div>

    <ul>

        {{#each ports}}

        <br />

        <li>

            <div>
                <p><b>Type: </b>{{type}}</p>
            </div>

            <div>
                <p><b>Count: </b><span class="badge text-bg-info">{{count}}</span></p>
            </div>

            {{#if features}}

            <div>
                <p><b>Features:</b></p>
            </div>

            <ul>

                {{#each features}}

                <li>
                    {{this}}
                </li>

                {{/each}}

            </ul>

            {{/if}}

        </li>

        {{/each}}

    </ul>

    <br />
    <hr />
    <br />

    <div>
        <p><b><mark>Battery:</mark></b></p>
    </div>

    {{#with battery}}

    <div>
        <p><b>Type: </b>{{type}}</p>
    </div>

    <div>
        <p><b>Capacity: </b>{{capacity}}</p>
    </div>

    <div>
        <p><b>Life: </b>{{life}}</p>
    </div>

    {{/with}}

    <br />
    <hr />
    <br />

    <div>
        <p><b><mark>Weight:</mark> </b>{{weight}}</p>
    </div>

    <br />
    <hr />
    <br />

    <div>
        <p><b><mark>Dimensions:</mark></b></p>
    </div>

    {{#with dimensions}}

    <div>
        <p><b>Height: </b>{{height}}</p>
    </div>

    <div>
        <p><b>Width: </b>{{width}}</p>
    </div>

    <div>
        <p><b>Depth: </b>{{depth}}</p>
    </div>

    {{/with}}

    <br />
    <hr />
    <br />

    <div>
        <p><b><mark>Operating system:</mark> </b>{{operating_system}}</p>
    </div>

    <br />
    <hr />
    <br />

    <div>
        <p><b><mark>Accessories:</mark></b></p>
    </div>

    <ul>

        {{#each accessories}}

        <li>

            <div>
                <p><em>{{name}}</em></p>
            </div>

            <div>
                <p><b>Price: </b><span class="badge text-bg-warning">{{price}}</span></p>
            </div>

        </li>

        {{/each}}

    </ul>

    {{/with}}

</div>

