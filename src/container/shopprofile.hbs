{{!--
Це код container файлу для shopprofile сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/shopprofile"
--}}

<div class="row m-0">
    <header>

        {{!-- {{#with navigation}}

        <div class="card">
            <div class="nav">

                {{#each links}}

                <div class="nav-item">
                    <a href="{{href}}" class="nav-link">{{text}}</a>
                </div>

                {{/each}}

                <div class="nav-item">
                    <a href="#" class="nav-link disabled">FAQ</a>
                </div>

            </div>
        </div>

        {{/with}} --}}

        {{> shopNav}}

        <h1 class="my-5">{{header}}</h1>

    </header>

    <section>

        {{#with purchase}}

        <div class="nav nav-tabs">

            {{#each tabs}}
            <div class="nav-item">
                <a href="#" class="nav-link {{#if @first}}active{{/if}}">{{this}}</a>
            </div>
            {{/each}}

        </div>

        <div class="mt-3">
            {{#with actionBlock}}

            {{#with input}}
            <input placeholder="{{placeholder}}" />
            {{/with}}

            {{#each buttons}}

            <button
                class="btn {{#if isSuccess}}btn-success{{/if}} {{#if isOutline}}btn-outline-success{{/if}} {{#if isDanger}}btn-outline-danger{{/if}}"
                link="{{link}}">{{text}}</button>

            {{/each}}

            {{/with}}
        </div>

        <hr class="mt-5" />

        {{> purchaseItem}}

        <hr class="mt-5" />

        {{/with}}

    </section>

    <section>

        {{#with userInfo}}

        <h2 class="mt-4 mb-5">{{title}}</h2>

        <div class="card p-2">

            {{#with profileData}}

            <h4 class="mt-2 mb-3">{{title}}</h4>

            <div class="card p-2 ps-0">
                <div class="row m-0">
                    {{#with fullName}}
                    <div class="col-4">
                        {{#with surname}}
                        <div>{{title}}</div>
                        <div><b>{{value}}</b></div>
                        {{/with}}
                    </div>
                    <div class="col-4">
                        {{#with name}}
                        <div>{{title}}</div>
                        <div><b>{{value}}</b></div>
                        {{/with}}
                    </div>
                    <div class="col-4">
                        {{#with middleName}}
                        <div>{{title}}</div>
                        <div><b>{{value}}</b></div>
                        {{/with}}
                    </div>
                    {{/with}}
                </div>
            </div>

            <div class="card p-2 my-2">
                <div class="row">
                    {{#with otherInfo}}
                    <div class="col-4">
                        {{#with birthday}}
                        <div>{{title}}</div>
                        <div><b>{{value}}</b></div>
                        {{/with}}
                    </div>
                    <div class="col-4">
                        {{#with sex}}
                        <div>{{title}}</div>
                        <div><b>{{value}}</b></div>
                        {{/with}}
                    </div>
                    <div class="col-4">
                        {{#with language}}
                        <div>{{title}}</div>
                        <div><b>{{value}}</b></div>
                        {{/with}}
                    </div>
                    {{/with}}
                </div>
            </div>

            {{/with}}

            <div class="card p-2">
                <div class="row">
                    {{#each buttons}}

                    <div class="col-4">
                        <button
                            class="btn {{#if isPrimary}}btn-primary{{/if}} {{#if isSecondary}}btn-outline-secondary{{/if}} {{#if isDanger}}btn-outline-danger{{/if}}"
                            link="{{link}}">{{text}}</button>
                    </div>

                    {{/each}}
                </div>
            </div>

        </div>

        <div class="card p-2 my-2">

            {{#with recipients}}

            <h4 class="mb-3">{{title}}</h4>

            <div class="row">
                {{#each users}}

                <div class="col-4">

                    <div class="card h-100 ps-2">

                        <div>{{name}}</div>
                        <div>{{phone}}</div>

                        {{#with button}}
                        <div>
                            <button class="btn btn-primary my-2" link="link">{{text}}</button>
                        </div>
                        {{/with}}

                    </div>

                </div>

                {{/each}}

            </div>

            {{/with}}

        </div>

        <div class="card p-2">

            {{#with contacts}}

            <h4 class="mb-3">{{title}}</h4>

            <div class="row">
                {{#each contactData}}

                <div class="col-4">

                    <div class="card h-100 ps-2">

                        <div>{{title}}</div>
                        <div>{{value}}</div>

                        {{#with button}}

                        <div>
                            <button
                                class="my-2 btn {{#if isPrimary}}btn-primary{{/if}} {{#if isSecondary}}btn-outline-secondary{{/if}} {{#if isDanger}}btn-outline-danger{{/if}}"
                                link="{{link}}">{{text}}</button>
                        </div>

                        {{/with}}

                    </div>

                </div>

                {{/each}}
            </div>

            {{/with}}

        </div>

        {{/with}}

    </section>

    {{!--
    <hr class="my-5" />

    <footer>
        <div class="row">
            {{#each footer}}
            <div class="col-2">
                {{#each this}}
                {{#if @last}}
                <div class="nav">
                    <a href="{{link}}" class="nav-link disabled">{{text}}</a>
                </div>
                {{else}}
                <div class="nav">
                    <a href="{{link}}" class="nav-link">{{text}}</a>
                </div>
                {{/if}}
                {{/each}}
            </div>
            {{/each}}
        </div>
    </footer> --}}

</div>

