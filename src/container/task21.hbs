{{!--
Це код container файлу для task21 сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/task21"
--}}

<div class="p-5">

    <div class="card">
        <div class="card-body">

            {{#with heading}}

            <div class="card">
                <div class="card-body">

                    {{#with main}}

                    <h1>{{title}}</h1>
                    <p class="text-muted">{{text}}</p>

                    {{#with button_text}}

                    <div class="mb-2">
                        <button class="btn btn-primary">{{solid}}</button>
                    </div>

                    <div>
                        <button class="btn btn-outline-primary">{{outline}}</button>
                    </div>

                    {{/with}}

                    {{/with}}

                </div>
            </div>

            <div class="card my-3">
                <div class="card-body">

                    {{#with second}}

                    <h2>{{title}}</h2>
                    <p class="text-muted">{{text}}</p>

                    {{#with button_text}}

                    <div class="mb-2">
                        <button class="btn btn-secondary">{{solid}}</button>
                    </div>

                    <div>
                        <button class="btn btn-outline-secondary">{{outline}}</button>
                    </div>

                    {{/with}}

                    {{/with}}

                </div>
            </div>

            <div class="card">
                <div class="card-body">

                    {{#with subblock}}

                    <h3>{{title}}</h3>
                    <p class="text-muted">{{text}}</p>

                    {{#with button_text}}

                    <div class="mb-2">
                        <button class="btn btn-dark">{{solid}}</button>
                    </div>

                    <div>
                        <button class="btn btn-outline-dark">{{outline}}</button>
                    </div>

                    {{/with}}

                    {{/with}}

                </div>
            </div>

            {{/with}}

        </div>
    </div>

    <div class="card m-5">

        {{#with nested_display}}

        <div class="display-1 ms-3">{{title}}</div>

        <div class="card-body">

            <div class="card">
                <div class="card-body">

                    {{#with children_display}}

                    <div class="display-4">{{title}}</div>
                    <p class="text-muted">{{text}}</p>

                    {{#with button}}

                    <div>
                        <button class="btn btn-outline-warning">{{text}}</button>
                    </div>

                    {{/with}}

                    {{/with}}

                </div>
            </div>

        </div>

        <h6 class="ms-3">{{header_text}}</h6>

        {{#with button}}

        <div class="ms-3 mb-3">
            <button class="btn btn-info">{{text}}</button>
        </div>

        {{/with}}

        {{/with}}

    </div>

    <div class="card m-5">
        <div class="card-body">

            {{#with paragraph}}

            <p class="text-uppercase">{{title}}</p>
            <p class="text-lowercase">{{text}}</p>

            {{#with button}}

            <a href="{{url}}" class="btn btn-link">{{text}}</a>

            {{/with}}

            <div class="card">
                <div class="card-body">

                    <ul>

                        {{#each list_name}}

                        <li><a href="{{url}}" class="btn btn-link">{{text}}</a></li>
                        {{!-- <li>
                            <a href="{{url}}" target="_blank" class="btn btn-link">{{text}}</a>
                        </li> --}}

                        {{/each}}

                    </ul>

                </div>
            </div>

            {{/with}}

        </div>
    </div>

</div>

