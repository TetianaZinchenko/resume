{{!--
Це код container файлу для task31 сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/task31"
--}}

<div class="row gx-2 gy-2">

    {{#with navigation}}

    <div class="col-4">

        <div class="card">

            <div class="card-header">

                <div class="display-6">Navigation</div>

            </div>

            <div class="card-body">


                <ul class="list-group">

                    {{#each links}}

                    <li class="list-group-item">

                        <a href="{{href}}">{{text}}</a>

                    </li>

                    {{/each}}

                </ul>

                {{#with button}}

                <button class="btn btn-link" href="{{href}}">{{text}}</button>

                {{/with}}

            </div>

        </div>

    </div>

    {{/with}}

    {{#with header}}

    <h1 class="text-primary text-center">{{title}}</h1>

    <p class="text-secondary">{{description}}</p>

    {{#with button}}

    <a href="{{link}}">{{text}}</a>

    {{/with}}

    {{/with}}

    {{#with city}}

    <h2 class="text-info text-center">{{title}}</h2>

    {{#each cards}}

    <div class="col-6">

        <div class="card">

            {{#with picture}}

            <img class="card-img-top" src="{{src}}" alt="{{alt}}" />

            {{/with}}

            <div class="card-body">
                <h5 class="card-title text-secondary">{{title}}</h5>
                <p>{{description}}</p>

                {{#with button}}

                <a href="{{href}}" class="btn btn-info">{{text}}</a>

                {{/with}}

            </div>

        </div>

    </div>

    {{/each}}

    {{/with}}

    {{#with winner}}

    <h2 class="text-info text-center">{{title}}</h2>

    {{#with table}}

    <table class="table table-striped table-bordered">
        <thead>
            <tr>

                {{#each head}}

                <th>
                    {{this}}
                </th>

                {{/each}}

            </tr>
        </thead>

        <tbody>

            {{#each user}}

            <tr>

                <th>
                    {{place}}
                </th>

                <td>{{name}}</td>

                <td>{{surname}}</td>

                <td>{{nickname}}</td>

            </tr>

            {{/each}}

        </tbody>
    </table>

    {{/with}}

    {{/with}}


    {{#with gallery}}

    <h2 class="text-info text-center">{{title}}</h2>

    {{#each cards}}

    <div class="col-4">

        <div class="card">

            <div class="card-body">

                <h5 class="card-title text-info text-center">{{name}}</h5>

                {{#each items}}

                <div class="card-body text-center">
                    {{this}}
                </div>

                {{/each}}

            </div>

        </div>

    </div>

    {{/each}}

    {{/with}}

    {{#with relaxion}}

    <h2 class="text-info text-center">{{title}}</h2>

    {{#each cards}}

    <div class="col-6">

        <div class="card">

            <h4 class="card-header text-info">{{header}}</h4>

            <div class="card-body">

                <h6 class="card-title text-secondary">{{title}}</h6>

                <p>{{description}}</p>

            </div>

        </div>

    </div>

    {{/each}}

    {{/with}}

    {{#with rest}}

    <h2 class="text-info text-center text-center">Rest</h2>

    {{#each cards}}

    <div class="col-6">

        <div class="card">
            <div class="card-header">
                <h4>{{header}}</h4>
            </div>

            <div class="card-body">
                <h6 class="card-title text-secondary">{{title}}</h6>
                <p>
                    {{description}}
                </p>
                <button class="btn btn-info btn-sm">{{button}}</button>
            </div>

            <div class="card-footer">
                <p>{{footer}}</p>
            </div>
        </div>

    </div>

    {{/each}}

    {{/with}}

    {{#with proposition}}

    <h2 class="text-info text-center">{{title}}</h2>

    {{#each card}}

    <div class="col-12">

        <div class="card">

            <div class="card-header">{{header}}</div>

            <div class="card-body">

                <h5 class="card-title">{{title}}</h5>

                <p>{{description}}</p>

            </div>
        </div>

    </div>

    {{/each}}

    {{/with}}

    {{#with footer}}

    <h2 class="text-info text-center">{{title}}</h2>

    <div class="col-4">

        <div class="card">

            <div class="card-header">

                <div class="display-6">Navigation</div>

            </div>

            <div class="card-body">

                <ul class="list-group">

                    {{#each navigation}}

                    <li class="list-group-item">

                        <a href="{{href}}">{{text}}</a>

                    </li>

                    {{/each}}

                </ul>

            </div>
        </div>

    </div>

    <div class="col-4">

        <div class="card">

            <div class="card-header">

                <div class="display-6">Social media</div>

            </div>

            <div class="card-body">

                <ul class="list-group">

                    {{#each socialMedia}}

                    <li class="list-group-item">

                        <a href="{{link}}">{{name}}</a>

                    </li>

                    {{/each}}

                </ul>

            </div>
        </div>

    </div>

    <div class="col-4">

        <div class="card">

            <div class="card-header">

                <div class="display-6">Partners</div>

            </div>

            <div class="card-body">

                <ul class="list-group">

                    {{#each partners}}

                    <li class="list-group-item">

                        <a href="{{link}}">{{name}}</a>

                    </li>

                    {{/each}}

                </ul>

            </div>
        </div>

    </div>

    {{/with}}

</div>

<br />
