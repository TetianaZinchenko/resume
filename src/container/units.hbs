	CSS-файлів
	
	@import — це CSS правило, яке використовується для
	імпортування CSS-файлів у інші CSS-файли
	
	@import url("custom.css");
	
	@import url("print.css") print;
	
	@import url("btn.css") layer(button);
		
	@import url("adaptive.css")
