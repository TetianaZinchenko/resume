{{!--
Це код container файлу для web сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/web"
--}}

<div>
    {{#with web}}
    <div>
        <div>
            <h1>Languages:</h1>
        </div>


        {{#each languages}}
        <div>

            <div>
                <p><b>{{name}}</b></p>
            </div>

            <div>
                <p><b>Version:</b> {{version}}</p>
            </div>

            <div>
                <p><b>Description:</b> {{description}}</p>
            </div>

            {{#if elements}}
            <ul>
                {{#each elements}}
                <li>
                    <div>
                        <mark><b><code>{{name}}</code></b></mark>
                    </div>
                    <div>
                        <p>Description: {{description}}</p>
                    </div>
                    <div>
                        <p>Attributes:</p>
                    </div>
                    <ul>
                        {{#each attributes}}
                        <li>
                            <div>
                                <p><em><code>{{name}}</code></em></p>
                            </div>
                            <div>
                                <p>Description: {{description}}</p>
                            </div>
                        </li>
                        {{/each}}
                    </ul>
                </li>
                {{/each}}
            </ul>
            {{/if}}

            {{#if properties}}
            <ul>
                {{#each properties}}
                <li>
                    <div>
                        <mark><b><code>{{name}}</code></b></mark>
                    </div>
                    <div>
                        <p>Description: {{description}}</p>
                    </div>
                    <div>
                        <p>Values:</p>
                    </div>
                    <ul>
                        {{#each values}}
                        <li>
                            <div>
                                <p><em>Value: {{value}}</em></p>
                            </div>
                            <div>
                                <p>Description: {{description}}</p>
                            </div>
                        </li>
                        {{/each}}
                    </ul>
                </li>
                {{/each}}
            </ul>
            {{/if}}

            {{#if functions}}
            <ul>
                {{#each functions}}
                <li>
                    <div>
                        <mark><b><code>{{name}}</code></b></mark>
                    </div>
                    <div>
                        <p>Description: {{description}}</p>
                    </div>
                    <div>
                        <p>Parameters:</p>
                    </div>
                    <ul>
                        {{#each parameters}}
                        <li>
                            <div>
                                <p><em>Name: {{name}}</em></p>
                            </div>
                            <div>
                                <p><em>Type: {{type}}</em></p>
                            </div>
                            <div>
                                <p>Description: {{description}}</p>
                            </div>
                        </li>
                        {{/each}}
                    </ul>
                </li>
                {{/each}}
            </ul>
            {{/if}}

        </div>
        {{/each}}

    </div>
    {{/with}}
</div>

